outputs = []
for sm in SAMPLES:
    assembler = config["samples"][sm]["assembler"]
    outputs.extend(expand(rules.asm_all.input, zip, sm=sm, asm=assembler))

# Check for additional analyses.
if config.get("asm_to_ref"):

    include: "rules/asm_to_ref.smk"


rule all:
    input:
        outputs,
